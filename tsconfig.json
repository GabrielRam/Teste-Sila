{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "lib": ["ES2020", "DOM"],
    "types": ["node","jest"],
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "test", "**/*.spec.ts"]
}